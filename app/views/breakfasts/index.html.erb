<div class="container">

<p id="notice"><%= notice %></p>

<h2 class="breakfast">Breakfast</h2>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Meal</th>
      <th>Day</th>
      <th>Food</th>
      <th>Calories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="tabe table-striped">
    <% @breakfasts.each do |breakfast| %>
      <tr>
        <td><%= breakfast.meal %></td>
        <td><%= breakfast.day %></td>
        <td><%= breakfast.food %></td>
        <td><%= breakfast.calories %></td>
        <td><%= link_to 'Show', breakfast %></td>
        <td><%= link_to 'Edit', edit_breakfast_path(breakfast) %></td>
        <td><%= link_to 'Destroy', breakfast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Breakfast', new_breakfast_path %>

</div>
